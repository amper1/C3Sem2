<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.amper.c3sem2.MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/etNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre"
            />
        <DatePicker
            android:id="@+id/dpFecha"
            android:layout_width="wrap_content"
            android:layout_height="258dp"
            android:layout_below="@+id/etNombre"
            android:layout_centerHorizontal="true"
            android:datePickerMode="calendar"
            />
        <EditText
            android:id="@+id/etTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dpFecha"
            android:hint="Telefono"
            />
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etTelefono"
            android:hint="Email"
            />
        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etEmail"
            android:text="Descripcion Contacto"
            />
        <EditText
            android:id="@+id/etDescContac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDesc"
            android:textAppearance="@style/TextAppearance.AppCompat"
            />


        <Button
            android:id="@+id/btSiguiente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etDescContac"
            android:text="Siguiente"
            />

    </RelativeLayout>



</LinearLayout>